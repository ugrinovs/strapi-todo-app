{
  "routes": [
    {
      "method": "GET",
      "path": "/todo",
      "handler": "Todo.find",
      "config": {
        "policies": [
          "global.filterUserItems"
        ]
      }
    },
    {
      "method": "GET",
      "path": "/todo/count",
      "handler": "Todo.count",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/todo/:_id",
      "handler": "Todo.findOne",
      "config": {
        "policies": [
          "global.itemBelongsToUser"
        ]
      }
    },
    {
      "method": "POST",
      "path": "/todo",
      "handler": "Todo.create",
      "config": {
        "policies": [
          "global.itemBelongsToUser"
        ]
      }
    },
    {
      "method": "PUT",
      "path": "/todo/:_id",
      "handler": "Todo.update",
      "config": {
        "policies": [
          "global.itemBelongsToUser"
        ]
      }
    },
    {
      "method": "DELETE",
      "path": "/todo/:_id",
      "handler": "Todo.destroy",
      "config": {
        "policies": [
          "global.itemBelongsToUser"
        ]
      }
    }
  ]
}
